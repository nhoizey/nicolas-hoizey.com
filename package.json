{
  "name": "nicolas-hoizey.com",
  "version": "2.3.0",
  "title": "Nicolas Hoizey, passionate about the Web and photography",
  "description": "This is the personnal website of Nicolas Hoizey, passionate about the Web and photography, among many other interests.",
  "author": {
    "name": "Nicolas Hoizey",
    "email": "nicolas@hoizey.com",
    "url": "https://nicolas-hoizey.com/"
  },
  "license": "MIT",
  "homepage": "https://nicolas-hoizey.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/nhoizey/nicolas-hoizey.com"
  },
  "scripts": {
    "clean": "rimraf _site",
    "sass": "sass --no-source-map assets/sass:_site/css",
    "postcss": "postcss _site/css/*.css --no-map --replace",
    "build:sass": "npm-run-all --sequential sass postcss",
    "watch:sass": "sass --source-map-urls=absolute --watch assets/sass:_site/css",
    "build:js": "rollup -c",
    "watch:js": "rollup -c --watch",
    "build:eleventy": "eleventy",
    "watch:eleventy": "eleventy --serve",
    "serviceworker:inject": "workbox injectManifest workbox.config.js",
    "start": "cross-env NODE_ENV=development npm-run-all --sequential clean build:js --parallel watch:*",
    "start:debug": "DEBUG=Eleventy* npm start",
    "build": "cross-env NODE_ENV=production npm-run-all --sequential clean --parallel build:js build:sass ga --sequential build:eleventy serviceworker:inject",
    "build:debug": "DEBUG=Eleventy* npm run build",
    "build:benchmark": "DEBUG=Eleventy:Benchmark* npm run build",
    "notist": "node ./_scripts/update-notist.js",
    "webmention": "node ./_scripts/update-webmention.js",
    "tweets": "node ./_scripts/send-tweets.js",
    "algolia": "atomic-algolia",
    "sprite": "node ./_scripts/generate-svg-sprite.js",
    "ga": "node ./_scripts/update-google-analytics.js",
    "fix-styles": "prettier-stylelint --write 'assets/**/*.scss'"
  },
  "devDependencies": {
    "@11ty/eleventy": "~0.12.1",
    "@11ty/eleventy-plugin-rss": "^1.1.1",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.1.1",
    "@babel/core": "^7.14.6",
    "@babel/preset-env": "^7.14.7",
    "@jlengstorf/get-share-image": "^0.8.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@rollup/plugin-replace": "^2.4.2",
    "@sindresorhus/slugify": "1.1.0",
    "atomic-algolia": "~0.3.19",
    "autoprefixer": "~10.2.6",
    "babel-loader": "^8.2.2",
    "bent": "^7.3.12",
    "chalk": "~4.1.1",
    "cheerio": "~1.0.0-rc.10",
    "cross-env": "^7.0.3",
    "cssnano": "~5.0.6",
    "dotenv": "^10.0.0",
    "download": "~8.0.0",
    "eleventy-plugin-embed-everything": "~1.13.2",
    "eleventy-plugin-embed-tweet": "^0.3.1",
    "eleventy-plugin-images-responsiver": "1.9.0",
    "eleventy-plugin-link_to": "~0.4.0",
    "encoding": "^0.1.13",
    "entities": "^2.2.0",
    "eslint": "7.29.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "3.4.0",
    "fast-glob": "^3.2.5",
    "fast-memoize": "~2.5.2",
    "feather-icons": "~4.28.0",
    "html-minifier": "^4.0.0",
    "image-size": "^1.0.0",
    "lodash": "^4.17.21",
    "markdown-it": "~12.0",
    "markdown-it-abbr": "^1.0.4",
    "markdown-it-anchor": "~7.1",
    "markdown-it-attrs": "^4.0.0",
    "markdown-it-bracketed-spans": "^1.0.1",
    "markdown-it-container": "~3.0.0",
    "markdown-it-footnote": "~3.0.3",
    "modern-css-reset": "~1.4.0",
    "moment": "~2.29.1",
    "node-fetch": "^2.6.1",
    "npm-run-all": "^4.1.5",
    "path": "^0.12.7",
    "postcss-cli": "~8.3.1",
    "postcss-hash": "~2.0.0",
    "prettier": "2.3.1",
    "prettier-stylelint": "~0.4.2",
    "require-dir": "^1.2.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.52.3",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-entrypoint-hashmanifest": "^0.1.2",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-visualizer": "~5.5.0",
    "sanitize-html": "^2.4.0",
    "sass": "~1.35.1",
    "simple-icons": "~5.3.0",
    "stylelint": "~13.13.1",
    "stylelint-config-standard": "~22.0.0",
    "svgstore": "^3.0.0-2",
    "truncate-html": "^1.0.3",
    "twitter": "^1.7.1",
    "twitter-text": "^3.1.0",
    "workbox-broadcast-update": "6.1.5",
    "workbox-cacheable-response": "6.1.5",
    "workbox-cli": "^6.1.5",
    "workbox-core": "6.1.5",
    "workbox-expiration": "6.1.5",
    "workbox-google-analytics": "6.1.5",
    "workbox-precaching": "6.1.5",
    "workbox-routing": "6.1.5",
    "workbox-strategies": "6.1.5"
  },
  "engines": {
    "node": ">=13"
  },
  "private": true,
  "dependencies": {
    "algoliasearch": "~4.10.2",
    "instantsearch.js": "~4.24.1"
  }
}
