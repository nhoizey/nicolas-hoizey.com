{% from "macros/meta.njk" import meta %}
{% from "macros/card.njk" import card %}

{% macro billetCard(billet) %}
  {% set content %}
  {{ billet.data.page.excerpt }}
  {% endset %}

  {% set meta %}
  {{ meta(billet, permalink=false) }}
  {% endset %}

  {{ card(
    type = 'billet',
    lang = billet.data.lang,
    title = billet.data.body.title,
    url = billet.url,
    content = content,
    meta = meta)
  }}
{% endmacro %}
