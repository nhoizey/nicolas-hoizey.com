		"date.lvl1": "{{ entry.date | year }} > {{ entry.date | month }}",
		"date.lvl2": "{{ entry.date | year }} > {{ entry.date | month }} > {{ entry.date | day }}",
		"url": "{{ absoluteEntryUrl }}",
